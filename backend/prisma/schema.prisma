generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  email       String      @unique
  firstName   String?
  lastName    String?
  accountType AccountType
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  products    Product[]
  orders      Order[]
  OrderItems  OrderItem[]
}

enum AccountType {
  SHOPPER
  SELLER
  ADMIN
}

model Product {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String?
  category    CategoryType
  tags        String[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  sellerId    String
  Seller      User         @relation(fields: [sellerId], references: [id])
  orderItems  OrderItem[]
}

model Order {
  id          String      @id @default(cuid())
  status      OrderStatus @default(PENDING)
  totalAmount Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  shopperId   String
  Shopper     User        @relation(fields: [shopperId], references: [id])
  orderItems  OrderItem[]
}

model OrderItem {
  id        String          @id @default(cuid())
  orderId   String
  productId String
  sellerId  String
  quantity  Int
  price     Float
  status    OrderItemStatus @default(PENDING)
  // Relations
  order     Order           @relation(fields: [orderId], references: [id]) // Reference to Order
  product   Product         @relation(fields: [productId], references: [id]) // Product ordered
  seller    User            @relation(fields: [sellerId], references: [id]) // Seller of the product
}

enum OrderItemStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum CategoryType {
  TABLE
  CHAIR
  COVER
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}
