generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  email       String      @unique
  firstName   String?
  lastName    String?
  accountType AccountType
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  products    Product[]
}

enum AccountType {
  SHOPPER
  SELLER
  ADMIN
}

model Product {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Float
  imageUrl    String?
  category    CategoryType @unique
  tags        String[]
  sellerId    String
  seller      User         @relation(fields: [sellerId], references: [id])
}

enum CategoryType {
  TABLE
  CHAIR
  COVER
}
